@model WritableCommentModel

<div class="col-md-4">
    <form asp-controller="Comments" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="PostId" class="form-control" type="hidden" value="@Model.PostId"/>
            <label class="control-label">Write your comment</label>
            <input asp-for="Text" class="form-control"/>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-outline-primary" />
        </div>
    </form>
</div>